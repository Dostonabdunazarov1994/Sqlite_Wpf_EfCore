<Window x:Class="MoviesDB.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoviesDB"
        mc:Ignorable="d"
        Title="Dialog" Height="200" Width="300" WindowStartupLocation="CenterScreen" Icon="/и4.PNG">
    <Grid>
        <StackPanel Margin="10,20,10,120">
            <TextBlock x:Name="label1" Text="Вы действительно хотите удалить элемент?" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="20,90,20,40">
            <Button x:Name="ok" Content="OK"  Click="but1_Click" Margin="10,5,5,5" Width="100"/>
            <Button x:Name="cancel" Content="Cancel"  Click="cancel_Click" Margin="20,5,5,5" Width="100"/>
        </StackPanel>
       
    </Grid>
</Window>
